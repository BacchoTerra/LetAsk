<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".fragments.ProfileEditBottomSheetDialog">

    <TextView
        android:id="@+id/profile_edit_btmSheet_appBarLayout"
        android:layout_width="0dp"
        android:text="Profile picture"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/textPrimaryColor"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_edit_btmSheet_fabCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_baseline_camera_24"
        app:tint="@color/white"
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_btmSheet_appBarLayout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_edit_btmSheet_fabGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_baseline_collections_24"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="mini"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_btmSheet_appBarLayout"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_edit_btmSheet_fabRemovePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_baseline_close_24"
        app:backgroundTint="@color/redWrong"
        app:fabSize="mini"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_btmSheet_appBarLayout"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Camera"
        app:layout_constraintEnd_toEndOf="@+id/profile_edit_btmSheet_fabCamera"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_btmSheet_fabCamera"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_btmSheet_fabCamera" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gallery"
        app:layout_constraintEnd_toEndOf="@+id/profile_edit_btmSheet_fabGallery"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_btmSheet_fabGallery"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_btmSheet_fabGallery" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="@+id/profile_edit_btmSheet_fabRemovePic"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_btmSheet_fabRemovePic"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_btmSheet_fabRemovePic" />
</androidx.constraintlayout.widget.ConstraintLayout>